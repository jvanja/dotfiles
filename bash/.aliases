### IMAGES
function compressjpgs() {
  [ -z "$1" ] && echo "Destination directory not specified" && return

  mogrify -monitor -sampling-factor 4:2:0 -strip -interlace JPEG -colorspace sRGB -path $1 -compress JPEG -quality 80 *.jpg
}

